  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../shared/*"]
